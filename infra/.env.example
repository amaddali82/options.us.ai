# =============================================================================
# Environment Variables Template for Docker Compose
# Copy this file to .env and update with your values
# =============================================================================

# Database Configuration
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=trading_db
POSTGRES_PORT=5432

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
ENVIRONMENT=production
LOG_LEVEL=info

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# UI Configuration
UI_PORT=3000
VITE_API_BASE_URL=http://localhost:8000

# Notification Service (disabled by default)
NOTIFICATION_PORT=8001
NOTIFICATION_MODE=logging

# Database URL (for migrations and API)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://trading_user:your_secure_password_here@localhost:5432/trading_db
